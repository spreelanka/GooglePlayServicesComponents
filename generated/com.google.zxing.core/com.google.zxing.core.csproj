<Project Sdk="Xamarin.Legacy.Sdk">
  <PropertyGroup>
    <TargetFrameworks>MonoAndroid12.0;net6.0-android31.0</TargetFrameworks>
    <IsBindingProject>true</IsBindingProject>
    <!--
      No warnings for:
       - CS0618: 'member' is obsolete: 'text'
       - CS0109: The member 'member' does not hide an inherited member. The new keyword is not required
       - CS0114: 'function1' hides inherited member 'function2'. To make the current method override that implementation, add the override keyword. Otherwise add the new keyword.
       - CS0628: 'member' : new protected member declared in sealed class
       - CS0108: 'member1' hides inherited member 'member2'. Use the new keyword if hiding was intended.
       - CS0809: Obsolete member 'member' overrides non-obsolete member 'member'
    -->
    <NoWarn>0618;0109;0114;0628;0108;0809</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=865435</PackageProjectUrl>
    <RepositoryUrl>https://go.microsoft.com/fwlink/?linkid=865435</RepositoryUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT AND Apache-2.0</PackageLicenseExpression>

      <PackageId>Xamarin.Google.ZXing.Core</PackageId>
      <RootNamespace>Google.ZXing</RootNamespace>
      <AssemblyName>Google.ZXing.Core</AssemblyName>
            <PackageId>Xamarin.Google.ZXing.Core</PackageId>
            <Title>Google ZXing (Core)</Title>
            <Summary>
              .NET for Android (formerly Xamarin.Android) bindings Google ZXing (Core) bindings
            </Summary>
            <Description>
              .NET for Android (formerly Xamarin.Android) bindings 
              ZXing ("zebra crossing") is an open-source, multi-format 1D/2D barcode image processing library. 
              Core barcode encoding/decoding library.
            </Description>
            <PackageDescription>
              ZXing ("zebra crossing") is an open-source, multi-format 1D/2D barcode image processing library. 
              Core barcode encoding/decoding library.
            </PackageDescription>
            <PackageTags>.NET dotnet google zxing zebra crossing bindings 1d 2d barcode qrcode scanning xamarin android monodroid artifact=com.google.zxing:core artifact_versioned=com.google.zxing:core:3.5.0</PackageTags>
      <PackageVersion>3.5.0.2</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <TransformFile Include="..\..\source\com.google.zxing\core\Transforms\*.xml" Link="Transforms\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\source\com.google.zxing\core\Additions\*.cs" Link="Additions\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <AndroidLibrary 
        Include="..\..\externals\com.google.zxing\core.aar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\com.google.zxing\core.aar')"
         />
    <Embeddedjar 
        Include="..\..\externals\com.google.zxing\core.jar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\com.google.zxing\core.jar')"
        />
    <JavaSourcesJar Include="..\..\externals\com.google.zxing\core-sources.jar" Link="Jars\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\templates\zxing\License.md" Pack="true" PackagePath="LICENSE.md" />
    <None Include="..\..\templates\zxing\External-Dependency-Info.txt" Pack="true" PackagePath="THIRD-PARTY-NOTICES.txt" />
  </ItemGroup>

</Project>
