<Project Sdk="Xamarin.Legacy.Sdk">
  <PropertyGroup>
    <TargetFrameworks>MonoAndroid12.0;net6.0-android31</TargetFrameworks>
    <IsBindingProject>true</IsBindingProject>
    <!--
      No warnings for:
       - CS0618: 'member' is obsolete: 'text'
       - CS0109: The member 'member' does not hide an inherited member. The new keyword is not required
       - CS0114: 'function1' hides inherited member 'function2'. To make the current method override that implementation, add the override keyword. Otherwise add the new keyword.
       - CS0628: 'member' : new protected member declared in sealed class
       - CS0108: 'member1' hides inherited member 'member2'. Use the new keyword if hiding was intended.
       - CS0809: Obsolete member 'member' overrides non-obsolete member 'member'
    -->
    <NoWarn>0618;0109;0114;0628;0108;0809</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=865435</PackageProjectUrl>
    <RepositoryUrl>https://go.microsoft.com/fwlink/?linkid=865435</RepositoryUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT AND Apache-2.0</PackageLicenseExpression>

      <PackageId>Square.Retrofit</PackageId>
      <RootNamespace>Square.Retrofit</RootNamespace>
      <AssemblyName>Square.Retrofit</AssemblyName>
            <Title>Retrofit bindings for .NET for Android (formerly Xamarin.Android)</Title>
            <Summary>
              A type-safe HTTP client for .NET for Android (formerly Xamarin.Android)
            </Summary>
            <Description>
              A type-safe HTTP client for .NET for Android (formerly Xamarin.Android)
            </Description>
            <PackageDescription>
              A type-safe HTTP client for .NET for Android (formerly Xamarin.Android)
            </PackageDescription>
            <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
            <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
            <PackageTags>.NET dotnet retrofit xamarin android monodroid artifact=com.squareup.retrofit:retrofit artifact_versioned=com.squareup.retrofit:retrofit:1.9.0</PackageTags>
      <PackageVersion>1.9.0.6</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <TransformFile Include="..\..\source\com.squareup.retrofit\retrofit\Transforms\*.xml" Link="Transforms\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\source\com.squareup.retrofit\retrofit\Additions\*.cs" Link="Additions\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <AndroidLibrary 
        Include="..\..\externals\com.squareup.retrofit\retrofit.aar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\com.squareup.retrofit\retrofit.aar')"
         />
    <Embeddedjar 
        Include="..\..\externals\com.squareup.retrofit\retrofit.jar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\com.squareup.retrofit\retrofit.jar')"
        />
    <JavaSourcesJar Include="..\..\externals\com.squareup.retrofit\retrofit-sources.jar" Link="Jars\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GoogleGson" Version="2.8.8.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\templates\squareup-retrofit\License.md" Pack="true" PackagePath="LICENSE.md" />
    <None Include="..\..\templates\squareup-retrofit\External-Dependency-Info.txt" Pack="true" PackagePath="THIRD-PARTY-NOTICES.txt" />
  </ItemGroup>

</Project>
