<Project Sdk="Xamarin.Legacy.Sdk">
  <PropertyGroup>
    <TargetFrameworks>MonoAndroid12.0;net6.0-android31</TargetFrameworks>
    <IsBindingProject>true</IsBindingProject>
    <!--
      No warnings for:
       - CS0618: 'member' is obsolete: 'text'
       - CS0109: The member 'member' does not hide an inherited member. The new keyword is not required
       - CS0114: 'function1' hides inherited member 'function2'. To make the current method override that implementation, add the override keyword. Otherwise add the new keyword.
       - CS0628: 'member' : new protected member declared in sealed class
       - CS0108: 'member1' hides inherited member 'member2'. Use the new keyword if hiding was intended.
       - CS0809: Obsolete member 'member' overrides non-obsolete member 'member'
    -->
    <NoWarn>0618;0109;0114;0628;0108;0809</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=865435</PackageProjectUrl>
    <RepositoryUrl>https://go.microsoft.com/fwlink/?linkid=865435</RepositoryUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT AND Apache-2.0</PackageLicenseExpression>

      <PackageId>Xamarin.Io.PerfMark.PerfMarkApi</PackageId>
      <RootNamespace>Xamarin.Io.PerfMark.PerfMarkApi</RootNamespace>
      <AssemblyName>Xamarin.Io.PerfMark.PerfMarkApi</AssemblyName>
            <Title>Xamarin.Io.PerfMark.PerfMarkApi</Title>
            <PackageDescription>.NET for Android (formerly Xamarin.Android) Bindings for Io.PerfMark.PerfMarkApi io.perfmark:perfmark-api package (Google GRPC  dependency)</PackageDescription>
            <Summary>.NET for Android (formerly Xamarin.Android) Bindings for Bindings for io.perfmark:perfmark-api package</Summary>
            <PackageTags>.NET, dotnet, xamarin, android, bindings, io.perfmark, io, perfmark, perfmark-api, artifact=io.perfmark:perfmark-api artifact_versioned=io.perfmark:perfmark-api:0.25.0</PackageTags>
      <PackageVersion>0.25.0</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <TransformFile Include="..\..\source\io.perfmark\perfmark-api\Transforms\*.xml" Link="Transforms\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\source\io.perfmark\perfmark-api\Additions\*.cs" Link="Additions\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <AndroidLibrary 
        Include="..\..\externals\io.perfmark\perfmark-api.aar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\io.perfmark\perfmark-api.aar')"
         />
    <Embeddedjar 
        Include="..\..\externals\io.perfmark\perfmark-api.jar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\io.perfmark\perfmark-api.jar')"
        />
    <JavaSourcesJar Include="..\..\externals\io.perfmark\perfmark-api-sources.jar" Link="Jars\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\templates\perfmark\LICENSE.md" Pack="true" PackagePath="LICENSE.md" />
    <None Include="..\..\templates\perfmark\External-Dependency-Info.txt" Pack="true" PackagePath="THIRD-PARTY-NOTICES.txt" />
  </ItemGroup>

</Project>
