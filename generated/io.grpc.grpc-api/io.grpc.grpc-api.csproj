<Project Sdk="Xamarin.Legacy.Sdk">
  <PropertyGroup>
    <TargetFrameworks>MonoAndroid12.0;net6.0-android31</TargetFrameworks>
    <IsBindingProject>true</IsBindingProject>
    <!--
      No warnings for:
       - CS0618: 'member' is obsolete: 'text'
       - CS0109: The member 'member' does not hide an inherited member. The new keyword is not required
       - CS0114: 'function1' hides inherited member 'function2'. To make the current method override that implementation, add the override keyword. Otherwise add the new keyword.
       - CS0628: 'member' : new protected member declared in sealed class
       - CS0108: 'member1' hides inherited member 'member2'. Use the new keyword if hiding was intended.
       - CS0809: Obsolete member 'member' overrides non-obsolete member 'member'
    -->
    <NoWarn>0618;0109;0114;0628;0108;0809</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=865435</PackageProjectUrl>
    <RepositoryUrl>https://go.microsoft.com/fwlink/?linkid=865435</RepositoryUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT AND Apache-2.0</PackageLicenseExpression>
    
      <PackageId>Xamarin.Grpc.Api</PackageId>
      <RootNamespace>Xamarin.Grpc.Api</RootNamespace>
      <AssemblyName>Xamarin.Grpc.Api</AssemblyName>
            <Title>Xamarin.Grpc.Api</Title>
            <PackageDescription>
                .NET for Android (formerly Xamarin.Android) Bindings for Google's GRPC Api package
            </PackageDescription>
            <Summary>.NET for Android (formerly Xamarin.Android) Bindings for Google's GRPC Api package</Summary>
            <PackageTags>.NET, dotnet, xamarin, android, bindings, google, grpc, api, artifact=io.grpc:grpc-api artifact_versioned=io.grpc:grpc-api:1.48.1</PackageTags>
      <PackageVersion>1.48.1</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <TransformFile Include="..\..\source\io.grpc\grpc-api\Transforms\*.xml" Link="Transforms\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\source\io.grpc\grpc-api\Additions\*.cs" Link="Additions\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <AndroidLibrary 
        Include="..\..\externals\io.grpc\grpc-api.aar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\io.grpc\grpc-api.aar')"
         />
    <Embeddedjar 
        Include="..\..\externals\io.grpc\grpc-api.jar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\io.grpc\grpc-api.jar')"
        />
    <JavaSourcesJar Include="..\..\externals\io.grpc\grpc-api-sources.jar" Link="Jars\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\generated\io.grpc.grpc-context\io.grpc.grpc-context.csproj" PrivateAssets="none" />
    <ProjectReference Include="..\..\generated\com.google.code.findbugs.jsr305\com.google.code.findbugs.jsr305.csproj" PrivateAssets="none" />
    <ProjectReference Include="..\..\generated\com.google.errorprone.error_prone_annotations\com.google.errorprone.error_prone_annotations.csproj" PrivateAssets="none" />
    <PackageReference Include="Xamarin.Google.Guava" Version="31.1.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\templates\grpc\LICENSE.md" Pack="true" PackagePath="LICENSE.md" />
    <None Include="..\..\templates\grpc\External-Dependency-Info.txt" Pack="true" PackagePath="THIRD-PARTY-NOTICES.txt" />
  </ItemGroup>

</Project>
