<Project Sdk="Xamarin.Legacy.Sdk">
  <PropertyGroup>
    <TargetFrameworks>MonoAndroid12.0;net6.0-android31</TargetFrameworks>
    <RootNamespace>Square.Retrofit2.ConverterGson</RootNamespace>
    <AssemblyName>Square.Retrofit2.ConverterGson</AssemblyName>
    <IsBindingProject>true</IsBindingProject>
    <!--
      No warnings for:
       - CS0618: 'member' is obsolete: 'text'
       - CS0109: The member 'member' does not hide an inherited member. The new keyword is not required
       - CS0114: 'function1' hides inherited member 'function2'. To make the current method override that implementation, add the override keyword. Otherwise add the new keyword.
       - CS0628: 'member' : new protected member declared in sealed class
       - CS0108: 'member1' hides inherited member 'member2'. Use the new keyword if hiding was intended.
       - CS0809: Obsolete member 'member' overrides non-obsolete member 'member'
    -->
    <NoWarn>0618;0109;0114;0628;0108;0809</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Square.Retrofit2.ConverterGson</PackageId>
    <Title>.NET for Android (formerly Xamarin.Android) bindings for converter-gson</Title>
    <Description>.NET for Android (formerly Xamarin.Android) bindings for Android library 'com.squareup.retrofit2:converter-gson'.</Description>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://aka.ms/googleplayservices</PackageProjectUrl>
    <RepositoryUrl>https://aka.ms/googleplayservices</RepositoryUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageVersion>2.9.0</PackageVersion>
    <PackageTags>.NET dotnet retrofit xamarin android monodroid converter-gson artifact_versioned=com.squareup.retrofit2:converter-gson:2.9.0</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <TransformFile Include="..\..\source\com.squareup.retrofit2\converter-gson\Transforms\*.xml" Link="Transforms\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\source\com.squareup.retrofit2\converter-gson\Additions\*.cs" Link="Additions\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <AndroidLibrary 
        Include="..\..\externals\com.squareup.retrofit2\converter-gson.aar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\com.squareup.retrofit2\converter-gson.aar')"
         />
    <Embeddedjar 
        Include="..\..\externals\com.squareup.retrofit2\converter-gson.jar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\com.squareup.retrofit2\converter-gson.jar')"
        />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\generated\com.squareup.retrofit2.retrofit\com.squareup.retrofit2.retrofit.csproj" PrivateAssets="none" />
    <PackageReference Include="GoogleGson" Version="2.9.0.1" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\templates\squareup-retrofit2\License.md" Pack="true" PackagePath="LICENSE.md" />
    <None Include="..\..\templates\squareup-retrofit2\External-Dependency-Info.txt" Pack="true" PackagePath="THIRD-PARTY-NOTICES.txt" />
  </ItemGroup>

</Project>
