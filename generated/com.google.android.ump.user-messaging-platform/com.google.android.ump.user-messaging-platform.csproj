<Project Sdk="Xamarin.Legacy.Sdk">
  <PropertyGroup>
    <TargetFrameworks>MonoAndroid12.0;net6.0-android31</TargetFrameworks>
    <IsBindingProject>true</IsBindingProject>
    <!--
      No warnings for:
       - CS0618: 'member' is obsolete: 'text'
       - CS0109: The member 'member' does not hide an inherited member. The new keyword is not required
       - CS0114: 'function1' hides inherited member 'function2'. To make the current method override that implementation, add the override keyword. Otherwise add the new keyword.
       - CS0628: 'member' : new protected member declared in sealed class
       - CS0108: 'member1' hides inherited member 'member2'. Use the new keyword if hiding was intended.
       - CS0809: Obsolete member 'member' overrides non-obsolete member 'member'
    -->
    <NoWarn>0618;0109;0114;0628;0108;0809</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <AndroidClassParser>class-parse</AndroidClassParser>
    <AndroidCodegenTarget>XAJavaInterop1</AndroidCodegenTarget>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Microsoft</Authors>
    <Owners>Microsoft</Owners>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <PackageProjectUrl>https://go.microsoft.com/fwlink/?linkid=865435</PackageProjectUrl>
    <RepositoryUrl>https://go.microsoft.com/fwlink/?linkid=865435</RepositoryUrl>
    <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT AND Apache-2.0</PackageLicenseExpression>

      <PackageId>Xamarin.Google.UserMessagingPlatform</PackageId>
      <RootNamespace>Xamarin.Google.UserMessagingPlatform</RootNamespace>
      <AssemblyName>Xamarin.Google.UserMessagingPlatform</AssemblyName>
            <Title>Xamarin.Google.UserMessagingPlatform</Title>
            <PackageDescription>
              .NET for Android (formerly Xamarin.Android) Bindings for Xamarin.Google.UserMessagingPlatform UMP package
            </PackageDescription>
            <Summary>
              .NET for Android (formerly Xamarin.Android) Bindings for Xamarin.Google.UserMessagingPlatform UMP package
            </Summary>
            <Description>
              .NET for Android (formerly Xamarin.Android) Bindings for Xamarin.Google.UserMessagingPlatform UMP package
            </Description>
            <RequireLicenceAcceptance>true</RequireLicenceAcceptance>
            <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
            <PackageTags>.NET dotnet xamarin, android, bindings, google, android, user, messaging, platform, ump, artifact=com.google.android.ump:user-messaging-platform artifact_versioned=com.google.android.ump:user-messaging-platform:2.0.0</PackageTags>
      <PackageVersion>2.0.0.2</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <TransformFile Include="..\..\source\com.google.android.ump\user-messaging-platform\Transforms\*.xml" Link="Transforms\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\source\com.google.android.ump\user-messaging-platform\Additions\*.cs" Link="Additions\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <AndroidLibrary 
        Include="..\..\externals\com.google.android.ump\user-messaging-platform.aar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\com.google.android.ump\user-messaging-platform.aar')"
         />
    <Embeddedjar 
        Include="..\..\externals\com.google.android.ump\user-messaging-platform.jar" Link="Jars\%(Filename)%(Extension)" 
        Condition="Exists('..\..\externals\com.google.android.ump\user-messaging-platform.jar')"
        />
    <JavaSourcesJar Include="..\..\externals\com.google.android.ump\user-messaging-platform-sources.jar" Link="Jars\%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.AndroidX.Annotation" Version="1.3.0.3" />
    <ProjectReference Include="..\..\generated\com.google.android.gms.play-services-ads-identifier\com.google.android.gms.play-services-ads-identifier.csproj" PrivateAssets="none" />
    <ProjectReference Include="..\..\generated\com.google.android.gms.play-services-basement\com.google.android.gms.play-services-basement.csproj" PrivateAssets="none" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\templates\user-messaging-platform\LICENSE.md" Pack="true" PackagePath="LICENSE.md" />
    <None Include="..\..\templates\user-messaging-platform\External-Dependency-Info.txt" Pack="true" PackagePath="THIRD-PARTY-NOTICES.txt" />
  </ItemGroup>

</Project>
